<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:livebutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutBackDarkRed"
    tools:context=".activities.MenuActivity">

    <ru.katso.livebutton.LiveButton
        android:id="@+id/btn_chart"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:text="Questions Statistics"
        android:textSize="20sp"
        livebutton:backgroundColor="@color/blueGray"
        livebutton:corners="32dp"
        livebutton:normalHeight="8dp"
        livebutton:pressedHeight="1dp"
        livebutton:shadowColor="@color/grey" />

    <ru.katso.livebutton.LiveButton
        android:id="@+id/btn_about_me"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_below="@id/btn_chart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="About Developer"
        android:textSize="20sp"
        livebutton:backgroundColor="@color/blueGray"
        livebutton:corners="32dp"
        livebutton:normalHeight="8dp"
        livebutton:pressedHeight="1dp"
        livebutton:shadowColor="@color/grey" />

    <ru.katso.livebutton.LiveButton
        android:id="@+id/btn_start_game"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_above="@id/btn_chart"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Start Game"
        android:textSize="20sp"
        livebutton:backgroundColor="@color/blueGray"
        livebutton:corners="32dp"
        livebutton:normalHeight="8dp"
        livebutton:pressedHeight="1dp"
        livebutton:shadowColor="@color/grey" />

</RelativeLayout>